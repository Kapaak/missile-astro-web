---
interface Props {
  title: string;
}

import Navigation from "@components/Navigation.astro";
import "@styles/base.css";

import { ViewTransitions } from "astro:transitions";

const { title } = Astro.props;
---

<!doctype html>
<html lang="cs-CZ">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Výuka anglického jazyka jak pro jednotlivce, tak pro skupiny či firmy. Lekce převážně online formou s možností offline po domluvě."
    />
    <meta name="title" content="Angličtina | Petr Walach" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="canonical" href="https://www.petrwalach.cz" />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Karla:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <Navigation astro:after-swap />
    <main>
      <slot />
    </main>
  </body>
</html>
