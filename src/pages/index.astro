---
import Layout from "@layouts/Layout.astro";
import { Image, Picture } from "astro:assets";
import Headline from "@styles/Headline.astro";

import HeroImage from "@assets/hero.jpg";
import Subheadline from "@styles/Subheadline.astro";
import Button from "@styles/Button.astro";
import Section from "@styles/Section.astro";
---

<Layout title="Angličtina | Petr Walach">
	<main>
		<Section>
			<div class="h-[40rem] w-full">
				<Picture
					src={HeroImage}
					alt="Missile"
					width={350}
					loading="lazy"
					decoding="async"
					style={{
						maxWidth: "100%",
						width: "100%",
						height: "100%",
						objectFit: "cover",
					}}
				/>
			</div>

			<div>
				<Headline className="text-center">Výuka angličtiny</Headline>
				<Subheadline className="text-center">Petr Walach</Subheadline>
			</div>
			<div class="flex flex-col gap-[1.5rem]">
				<a href="/contact">
					<Button className="w-full">Kontakt</Button>
				</a>
				<a href="/about-me">
					<Button className="w-full" variant="bordered">Více o mně</Button>
				</a>
			</div>
		</Section>
	</main>
</Layout>
