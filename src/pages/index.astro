---
import Layout from "@layouts/Layout.astro";
import { Picture } from "astro:assets";
import Headline from "@styles/Headline.astro";

//@ts-nocheck
import HeroImage from "@assets/hero.jpg";
import Subheadline from "@styles/Subheadline.astro";
import Button from "@styles/Button.astro";
import Section from "@styles/Section.astro";
import Text from "@styles/Text.astro";
import { CheckCircled } from "@astropub/icons";
---

<Layout title="Angličtina | Petr Walach">
  <main>
    <Section>
      <div class="flex flex-col gap-4 h-full lg:flex-row">
        <div
          class="h-[30rem] w-full md:h-[40rem] lg:order-1 lg:flex-[1_1_40%] lg:h-full"
        >
          <Picture
            src={HeroImage}
            alt="Missile"
            sizes="(max-width: 640px) 100vw, (max-width: 768px) 50vw, 33vw"
            loading="lazy"
            decoding="async"
            class="max-w-full w-full h-full object-cover object-[top_28%_left_20%]"
          />
        </div>
        <div class="flex-1 flex flex-col lg:pt-20 lg:flex-[1_1_60%]">
          <div class="text-center lg:text-left mt-[-5.8rem] lg:mt-0">
            <Headline>Výuka angličtiny</Headline>
            <Subheadline>Petr Walach</Subheadline>
          </div>
          <Text className="mt-4">
            Poskytuji individuální doučování anglického jazyka na míru
          </Text>
          <ul
            class="hidden flex-col gap-2 mb-2 sm:grid sm:grid-cols-3 sm:mt-10 lg:grid-cols-2"
          >
            <li class="flex gap-2 items-center">
              <CheckCircled color="white" size="28" />
              <Text className="text-sm">Individuální lekce</Text>
            </li>
            <li class="flex gap-2 items-center">
              <CheckCircled color="white" size="28" />
              <Text className="text-sm">Individuální lekce</Text>
            </li>
            <li class="flex gap-2 items-center">
              <CheckCircled color="white" size="28" />
              <Text className="text-sm">Individuální lekce</Text>
            </li>
            <li class="flex gap-2 items-center">
              <CheckCircled color="white" size="28" />
              <Text className="text-sm">Individuální lekce</Text>
            </li>
            <li class="flex gap-2 items-center">
              <CheckCircled color="white" size="28" />
              <Text className="text-sm">Individuální lekce</Text>
            </li>
            <li class="flex gap-2 items-center">
              <CheckCircled color="white" size="28" />
              <Text className="text-sm">Individuální lekce</Text>
            </li>
          </ul>
          <div class="flex flex-col gap-[1.5rem] mt-auto lg:flex-row">
            <a href="/contact">
              <Button className="w-full">Kontakt</Button>
            </a>
            <a href="/about-me">
              <Button className="w-full" intent="primary" variant="bordered">
                Více o mně
              </Button>
            </a>
          </div>
        </div>
      </div>
    </Section>
  </main>
</Layout>
